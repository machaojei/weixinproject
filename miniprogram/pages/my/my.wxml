<view class="container">

  <!-- 用户 信息 -->
  <view class="userinfo">
    <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
    <!-- 昵称 -->
    <view class="user">
      <!-- <text class="userinfo-nickname">昵称:</text> -->
      <open-data class="userinfo-nickname" type="userNickName"></open-data>
    </view>
  </view>
  <!-- 我的订单数量 -->
  <view class="my-item">
    <navigator class="uploader-text" url="../myorder/myorder" open-type="switchTab">
      <text>所有订单({{ordernum}})个</text>
    </navigator>
    <image class='uploader-image' src='../../images/icon_blue_back.png' mode="aspectFit">   </image>
  </view>

  <view class="my-item">
        <text class = "uploader-text" bindtap='choose'>上传图片(一次最多九张)</text>
  </view>
  <view class="my-item">
    <navigator class="uploader-text" url="../mypicture/mypicture" open-type="navigate">
        <text class = "uploader-text">我上传的图片</text>
            </navigator>
            <image class='uploader-image' src='../../images/icon_blue_back.png' mode="aspectFill">   </image>
  </view>

</view>